{% extends "../../layout.njk" %}

{% block pageTitle %}
  Your payment is in progress
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Your payment is in progress</h1>
    <p class="govuk-body-l lede">You can either:<br/>
      <a href="/card_details/{{ chargeId }}/auth_waiting" id="confirm-link">Continue with your payment</a>
    </p>
    <p class="govuk-body-l lede">or<br/>
      <a href="{{ returnUrl }}" id="return-url">Go back to try the payment again</a>
    </p>
  </div>
</div>
{% endblock %}
